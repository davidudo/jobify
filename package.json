{
  "name": "jobify",
  "version": "1.0.1",
  "description": "A job tracking web application.",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "server": "npx nodemon server --ignore client",
    "client": "npm start --prefix client",
    "start:dev": "concurrently --kill-others-on-fail \"npm run server\" \" npm run client\"",
    "start": "node server.js",
    "seed": "node populate.js"
  },
  "keywords": [
    "job tracking app",
    "job search app",
    "restful api",
    "node.js",
    "express",
    "mongodb",
    "JWT authentication"
  ],
  "author": "David Udo",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.0.0",
    "nodemon": "^3.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.10.0",
    "morgan": "^1.10.0",
    "validator": "^13.12.0",
    "xss-filters": "^1.2.7"
  }
}
